<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateReview">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n리뷰를 작성해주세요"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>


    <RatingBar
        android:theme="@style/RatingBar"
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/ratingBarStyleIndicator"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_photo_camera_24" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_24" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_24" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_24" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OwnerGBText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n집주인은 친절했나요?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/OwnerGBRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/OwnerGB1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/OwnerGB2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/OwnerGB3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/OwnerGB4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/OwnerGB5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/HeatCoolText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n난방 및 냉방은?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/HeatCoolRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/HeatCool1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/HeatCool2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/HeatCool3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/HeatCool4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/HeatCool5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/OptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n옵션 상태는 좋았나요?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/OptionRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/Option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/Option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/Option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/Option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/Option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/SoundText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n방음은 잘 돼나요?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/SoundRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/Sound1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/Sound2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/Sound3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/Sound4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/Sound5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/WaterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n수압은 어떤가요?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/WaterRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/Water1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/Water2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/Water3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/Water4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/Water5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/CCTVText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n 보안은 좋나요?"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center">
                </TextView>

                <RadioGroup
                    android:id="@+id/CCTVRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/CCTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 만족"/>

                    <RadioButton
                        android:id="@+id/CCTV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만족"/>
                    <RadioButton
                        android:id="@+id/CCTV3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"/>
                    <RadioButton
                        android:id="@+id/CCTV4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불만족"/>
                    <RadioButton
                        android:id="@+id/CCTV5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 불만족"/>
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/writeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n\n이 외에 좋았던 점 및 개선해야 할 점이 있다면 적어주세요."
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/contentsInput"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border"
                    android:gravity="top"
                    android:hint="리뷰를 작성해주세요."

                    android:maxLength="100"
                    android:padding="30dp"
                    android:textCursorDrawable="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <Button
                android:id="@+id/writeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="작성"
                android:onClick="RButton"
                app:backgroundTint="#CAACF4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
